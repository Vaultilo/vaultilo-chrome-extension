{
  "manifest_version": 2,
  "name": "Vaultilo",
  "version": "1.0.1",
  "description": "Vaultilo is a secure password manager to save your crypto credentials,password,notes and lets you keep the data to yourself.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "Vaultilo",
    "default_popup": "ext.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions" : [
    "nativeMessaging",
    "tabs",
    "activeTab",
    "notifications",
    "*://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "http://127.0.0.1:3000",
    "https://app.vaultilo.com/extension/view"
]
}
